{
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/core/*": ["./src/core/*"],
      "@/domain/*": ["./src/core/domain/*", "./src/domain/*"],
      "@/use-cases/*": ["./src/core/use-cases/*"],
      "@/ports/*": ["./src/core/ports/*"],
      "@/infrastructure/*": ["./src/infrastructure/*"],
      "@/presentation/*": ["./src/presentation/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/components/*": [
        "./src/components/*",
        "./src/presentation/components/*"
      ],
      "@/hooks/*": ["./src/presentation/hooks/*", "./src/hooks/*"],
      "@/context/*": ["./src/context/*", "./src/presentation/contexts/*"],
      "@/types/*": ["./src/shared/types/*"],
      "@/schemas/*": ["./src/shared/schemas/*"],
      "@/utils/*": ["./src/shared/utils/*"],
      "@/config/*": ["./src/shared/config/*"]
    },
    "noImplicitAny": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noEmit": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
